@model  MyAppWheels5.OptionOfCarModel
<h4>Выбирите опции</h4>
<table>
    @for (var i = 0; i < Model.OptionListOfCar.Count; i++)
    {
        if (i % 2 == 0)
        {
            @:<tr></tr>
        }
        <td>
            <label>
                @Html.CheckBoxFor(m => Model.OptionListOfCar[i].IsChecked)
                @Model.OptionListOfCar[i].NameInRussion
            </label>
            @Html.HiddenFor(m => Model.OptionListOfCar[i].Id)
            @Html.HiddenFor(m => Model.OptionListOfCar[i].NameInRussion)
            @Html.HiddenFor(m => Model.OptionListOfCar[i].NameInInglish)
        </td>
    }
</table>
